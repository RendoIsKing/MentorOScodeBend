# ── Backend Environment Variables ──────────────────────────
# Copy this file to .env and fill in the values.

# MongoDB connection string
DB_URL=mongodb://127.0.0.1:27017/mentoros
# Alias (some code references MONGO_URI)
MONGO_URI=mongodb://127.0.0.1:27017/mentoros

# Server port
PORT=3006

# Auth secrets
SESSION_SECRET=change-me-session-secret
JWT_SECRET=change-me-jwt-secret

# Frontend origin (CORS + cookie domain)
FRONTEND_ORIGIN=http://localhost:3002

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Stripe keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=usd

# OpenAI API key (for AI mentor / RAG)
OPENAI_API_KEY=sk-...

# Upload directory (defaults to ./uploads)
# UPLOAD_ROOT=./uploads
